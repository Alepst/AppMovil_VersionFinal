<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil_P1.Views.AguaPage"
             Title="Registro de Agua"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Registro de Agua"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               TextColor="Black"/>

        <Label x:Name="contadorLabel"
               FontSize="18"
               HorizontalOptions="Center"
               Text="Vasos hoy: 0" TextColor="Black"/>

        <Button Text="Agregar un vaso"
                FontAttributes="Bold"
                BackgroundColor="#6eab35"
                TextColor="White"
                Clicked="AgregarVaso_Clicked" />
    </VerticalStackLayout>

</ContentPage>
